{
  "name": "vm-sight",
  "private": true,
  "dependencies": {
    "@kubernetes/client-node": "^0.14.3",
    "dotenv-defaults": "^2.0.2"
  },
  "devDependencies": {
    "cypress": "^8.6.0",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "deps": "lerna bootstrap --npm-client=yarn",
    "dev": "lerna run dev --no-prefix --stream --scope @vm-sight/sight-backend",
    "start": "lerna run serve --no-prefix --stream --scope @vm-sight/sight-frontend",
    "backend:dev": "nodemon ./api/server.ts --env=dev",
    "backend:prod": "nodemon ./api/server.ts --env=prod",
    "frontend:dev": "cd client && npm run serve",
    "frontend:prod": ""
  }
}
